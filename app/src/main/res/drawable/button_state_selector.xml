<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
        android:state_pressed="true">
        <shape android:padding="1dp" android:shape="rectangle">
            <solid android:color="@color/purple_300"/>
            <stroke android:width="2dp" android:color="@color/purple_300" />
            <corners
                android:bottomLeftRadius="@dimen/button_border_radius"
                android:bottomRightRadius="@dimen/button_border_radius"
                android:topLeftRadius="@dimen/button_border_radius"
                android:topRightRadius="@dimen/button_border_radius" />
        </shape>
    </item>
    <item android:state_enabled="true"
        android:state_pressed="false">
        <shape android:padding="1dp" android:shape="rectangle">
            <solid android:color="@color/purple_200"/>
            <stroke android:width="2dp" android:color="@color/purple_200" />
            <corners
                android:bottomLeftRadius="@dimen/button_border_radius"
                android:bottomRightRadius="@dimen/button_border_radius"
                android:topLeftRadius="@dimen/button_border_radius"
                android:topRightRadius="@dimen/button_border_radius" />
        </shape>
    </item>
</selector>
